<div id="login" class="d-flex justify-content-center flex-column w-50 p-5 mx-auto my-5 bg-light">
    <h1 class=" display-2 text-dark text-center mb-4">Login</h1>
    <button type="button" class="btn btn-primary btn-lg m-3" {{action 'authenticateWithFacebook'}}>
        <i class="fa fa-facebook-official" aria-hidden="true"></i> Login with Facebook
    </button>
    <button type="button" class="btn btn-primary btn-lg m-3" {{action 'authenticateWithGoogle'}}>
        <i class="fa fa-google-plus-official" aria-hidden="true"></i> Login with Google
    </button>

    <div id="loginModal" class="modal m-auto" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-dark">
                    <h5 class="modal-title h3">Logging in...</h5>
                </div>
                <div class="modal-body text-dark text-center h4">
                    <p>Please wait while we get your data...</p>
                    <i class="fa fa-spinner fa-pulse fa-fw" aria-hidden="true"></i>
                </div>
            </div>
        </div>
    </div>
</div>