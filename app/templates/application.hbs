<div id="content" class="container bg-dark text-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        {{#link-to "index" class="navbar-brand"}}What's For Dinner{{/link-to}}
        <button class="navbar-toggler hidden-lg-up" type="button" data-toggle="collapse" data-target="#collapsibleNavId" aria-controls="collapsibleNavId"
            aria-expanded="false" aria-label="Toggle navigation"><i class="fa fa-bars" aria-hidden="true"></i></button>
        <div class="collapse navbar-collapse" id="collapsibleNavId">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                {{#if session.isAuthenticated}}
                <li class="nav-item">
                    {{#link-to "days" class="nav-link"}} <i class="fa fa-calendar" aria-hidden="true"></i> Days{{/link-to}}
                </li>
                <li class="nav-item">
                    {{#link-to "checklists" class="nav-link"}} <i class="fa fa-check-square-o" aria-hidden="true"></i> Checklists{{/link-to}}
                </li>
                {{/if}}
            </ul>
            <ul class="navbar-nav ml-auto mr-0 mt-2 mt-lg-0">
            {{#if session.isAuthenticated}}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
                        aria-expanded="false">
                        {{member-component member=currentMember class="d-inline"}}
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        {{#link-to "me" class="dropdown-item"}} <i class="fa fa-user" aria-hidden="true"></i> Profile {{/link-to}}
                        <a class="dropdown-item" {{action 'invalidateSession'}}> <i class="fa fa-sign-out" aria-hidden="true"></i> Logout</a>
                    </div>
                </li>
            {{else}}
                <li class="nav-item">{{#link-to 'login' class='nav-link'}}Login{{/link-to}}</li>
            {{/if}}
            </ul>
        </div>
    </nav>

    {{outlet}}
</div>